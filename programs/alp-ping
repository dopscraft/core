loader.loadAPI("alp")
loader.loadAPI("events")
local myEvents = events.create()
local myAlp = alp.create(myEvents)

args = { ... }

local waitPing = true

function pingHandler(src, dest, protocol, packet)
  if src == args[1] then
    print("ping reply from " .. args[1])
    waitPing = false
  end
end

function ping(host)
  myAlp:send(host, "echo", {})
  myAlp:listen("echo.r", pingHandler)
  while waitPing do
    myEvents:pullEvent()
  end
  myAlp:unlisten("echo.r")
end

function run()
  if not args[1] then
    print("ping <address>")
    return
  end
  print("pinging " .. args[1] .. "...")
  ping(args[1])
end
run()
