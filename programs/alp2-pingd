loader.loadAPI("alp2")

alp2.openDevices(alp2.getDevices())
print("Listening")
while true do
  sleep(0)
  local packet = alp2.waitForPacket("ping", 10, true)
  if packet ~= nil then
    print("Packet from " .. packet.src)
    alp2.sendPacket(
      { packet.meta.side },
      "ping.reply",
      packet.src,
      packet.data
    )
  end
end

